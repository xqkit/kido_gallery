<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_delete_confirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23.5dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/delete_photo"
        android:textColor="#F5FFFFFF"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/no_delete"
        android:layout_width="57.5dp"
        android:layout_height="51.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/fab_left" />

    <ImageView
        android:id="@+id/yes_delete"
        android:layout_width="57.5dp"
        android:layout_height="51.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/fab_right" />
</RelativeLayout>