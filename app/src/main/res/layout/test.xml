<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/avater_uri"

        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp" />

    <RelativeLayout
        android:layout_width="148dp"
        android:layout_height="87dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_corner">

        <TextView
            android:id="@+id/contactName_tv"
            android:layout_width="75dp"
            android:layout_height="12dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4.5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_centerInParent="true"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="17.7dp"
            android:layout_height="17.7dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4.3dp"
            android:layout_marginTop="4.3dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="5.6dp"
        android:background="@drawable/shape_half_circle"
        android:text="回复"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/add_rl"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="6dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_denied"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginStart="5.6dp"
            android:background="@drawable/shape_half_circle" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5.6dp"
            android:background="@drawable/shape_half_circle" />
    </RelativeLayout>
</FrameLayout>